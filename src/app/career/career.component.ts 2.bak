import { Component } from '@angular/core';
import { ServicesComponent } from '../services/services.component';

@Component({
  selector: 'app-career',
  templateUrl: './career.component.html',
  styleUrls: ['./career.component.css'],
})
export class CareerComponent {
  uploadedFiles: any;

  constructor(private _services: ServicesComponent) {}

  onfileSelected(event: any) {
    this.uploadedFiles = event.target.files;
  }

  onSubmit() {
    if (this.uploadedFiles.length == 0) {
      alert('Please load a file in (.doc or .pdf file format)');
      return;
    }
    let formData = new FormData();
    for (var i = 0; i < this.uploadedFiles.length; i++) {
      formData.append(
        'uploads[]',
        this.uploadedFiles[i],
        this.uploadedFiles[i].name
      );
    }

    this._services.uploadFile(formData).subscribe((response) => {
      console.log('file upload response received is ', response);
      alert('Fil Upload Successful. We will contact your shortly.');
    });
  }
}
